---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { projects } from "../../data/projects";
---

<BaseLayout title="Projects | AZVAI AI Playground" current="projects">
  <section class="hero">
    <p class="eyebrow">portfolio</p>
    <h1>Projects</h1>
    <p class="lead">All public vibecoding builds with architecture, stack, and key implementation notes.</p>
  </section>

  <section class="grid">
    {projects.map((project) => (
      <article class="card span-6">
        <p class="card-meta">{project.category}</p>
        <h3>{project.title}</h3>
        <p>{project.summary}</p>
        <ul class="chip-list">
          {project.stack.slice(0, 3).map((item) => (
            <li>{item}</li>
          ))}
        </ul>
        <p class="kicker"><a href={`/projects/${project.slug}`}>View project &rarr;</a></p>
      </article>
    ))}
  </section>
</BaseLayout>
