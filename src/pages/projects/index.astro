---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { projects } from "../../data/projects";

const categoryIcons: Record<string, string> = {
  "Product Experiment": "&#128161;",
  "Frontend System": "&#128187;",
  "Data & Analytics": "&#128202;",
  "Data Engineering": "&#128200;",
  "Applied AI Product": "&#129302;",
  "Knowledge Ops": "&#128214;",
  "MCP Integration": "&#128279;",
  "Process Automation": "&#9881;",
};
---

<BaseLayout title="Projects | AZVAI AI Playground" current="projects">
  <section class="hero">
    <p class="eyebrow">portfolio</p>
    <h1>Projects</h1>
    <p class="lead">All public vibecoding builds with architecture, stack, and key implementation notes.</p>
  </section>

  <section class="grid">
    {projects.map((project) => (
      <article class="card span-6">
        <div class="card-image">
          {project.image ? (
            <img src={project.image} alt={`${project.title} screenshot`} loading="lazy" />
          ) : (
            <div class="card-image-placeholder">
              <span class="placeholder-icon" set:html={project.icon} />
              <span>{project.category}</span>
            </div>
          )}
        </div>
        <span class="category-badge">{project.category}</span>
        <h3>{project.title}</h3>
        <p>{project.summary}</p>
        <ul class="chip-list">
          {project.stack.slice(0, 4).map((item) => (
            <li>{item}</li>
          ))}
        </ul>
        <p class="kicker"><a href={`/projects/${project.slug}`}>View project &rarr;</a></p>
      </article>
    ))}
  </section>
</BaseLayout>
