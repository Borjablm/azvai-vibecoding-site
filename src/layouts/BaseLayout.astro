---
import { Image } from "astro:assets";
import "../styles/global.css";
import azvaiCirculos from "../assets/azvai_circulos.png";

interface Props {
  title: string;
  description?: string;
  current?: "home" | "projects" | "training";
  noindex?: boolean;
  ogType?: "website" | "article";
}

const {
  title,
  description = "Vibecoding portfolio and AI playground.",
  current = "home",
  noindex = false,
  ogType = "website",
} = Astro.props;

const siteUrl = Astro.site ?? new URL("https://ai.azvai.com");
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const robotsContent = noindex ? "noindex, nofollow" : "index, follow";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robotsContent} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="AZVAI AI Playground" />
    <meta property="og:image" content="https://ai.azvai.com/assets/azvai_circulos.png" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="theme-color" content="#F1FFD2" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/azvai_circulos.png" />
  </head>
  <body>
    <div class="site-shell">
      <header class="site-nav">
        <a href="/" class="brand" aria-label="AZVAI home">
          <Image src={azvaiCirculos} alt="AZVAI" width={28} height={28} />
        </a>
        <nav class="nav-links" aria-label="Main navigation">
          <a href="/" aria-current={current === "home" ? "page" : undefined}>Home</a>
          <a href="/projects" aria-current={current === "projects" ? "page" : undefined}>Projects</a>
          <a href="/training" aria-current={current === "training" ? "page" : undefined}>Training</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        <div class="footer-brand">
          <Image src={azvaiCirculos} alt="AZVAI" width={22} height={22} />
          <span>AZVAI</span>
        </div>
        <span>Purpose-driven AI experiments for systems change. Astro + GitHub + Netlify.</span>
      </footer>
    </div>
  </body>
</html>
